@model SistemaFacturacionMVC.Models.client
@{
    ViewData["Title"] = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar usuario</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteClient">
                <input type="hidden" asp-for="id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                <div class="form-group">
                    <label asp-for="name"></label>
                    <input asp-for="name" type="text" class="form-control" id="name" aria-describedby="" placeholder="Nombre del cliente" disabled>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastname"></label>
                    <input asp-for="lastname" type="text" class="form-control" id="lastname" placeholder="Apellido del cliente" disabled>
                    <span asp-validation-for="lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nit"></label>
                    <input asp-for="nit" type="text" class="form-control" id="username" placeholder="Número de Nit" disabled>
                    <span asp-validation-for="nit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="phone"></label>
                    <input asp-for="phone" type="text" class="form-control" id="phone" placeholder="número de télefono" disabled>
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="status"></label>
                    <select asp-for="status" class="form-control" disabled>
                        <option>Selecciona....</option>
                        <option>Activo</option>
                        <option>Inactivo</option>
                    </select>
                    <span asp-validation-for="status" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary m-2" value="deleteCliente">Eliminar</button>
            </form>
        </div>
    </div>
</div>




