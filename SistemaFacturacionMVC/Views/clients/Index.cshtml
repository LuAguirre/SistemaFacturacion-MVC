@model IEnumerable<SistemaFacturacionMVC.Models.client>
@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>
<div class="container">

    @if (TempData["menssage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["menssage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["menssageClient"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["menssageClient"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="clients"> Agregar cliente </a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.id)</td>
                        <td>@Html.DisplayNameFor(m => m.name)</td>
                        <td>@Html.DisplayNameFor(m => m.lastname)</td>
                        <td>@Html.DisplayNameFor(m => m.nit)</td>
                        <td>@Html.DisplayNameFor(m => m.phone)</td>
                        <td>@Html.DisplayNameFor(m => m.status)</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (client element in Model)
                    {
                        <tr>
                            <td>@element.id</td>
                            <td>@element.name</td>
                            <td>@element.lastname</td>
                            <td>@element.nit</td>
                            <td>@element.phone</td>
                            <td>@element.status</td>
                            <td>
                                <a asp-controller="clients" asp-action="Edit" asp-route-id="@element.id" class="btn btn-light">Editar</a>
                                <a asp-controller="clients" asp-action="Delete" asp-route-id="@element.id" class="btn btn-danger">Eliminar</a>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        }
        else
        {
            <h2>No hay información aún</h2>
        }
    </div>
</div>

