@model IEnumerable<SistemaFacturacionMVC.Models.product>
@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>
<div class="container">

    @if (TempData["menssage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["menssage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["menssageDelete"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["menssageDelete"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

<div class="row">
    <div class="col-sm-6">
        <h3>Lista de Productos</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-primary d-block m-2" asp-action="Create" asp-controller="products">Agregar Producto</a>
    </div>
</div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.idProduct)</td>
                        <td>@Html.DisplayNameFor(m => m.name)</td>
                        <td>@Html.DisplayNameFor(m => m.description)</td>
                        <td>@Html.DisplayNameFor(m => m.price)</td>
                        <td>@Html.DisplayNameFor(m => m.cost)</td>
                        <td>@Html.DisplayNameFor(m => m.existence)</td>
                        <td>@Html.DisplayNameFor(m => m.status)</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (product element in Model)
                    {
                        <tr>
                            <td>@element.idProduct</td>
                            <td>@element.name</td>
                            <td>@element.description</td>
                            <td>@element.price</td>
                            <td>@element.cost</td>
                            <td>@element.existence</td>
                            <td>@element.status</td>
                            <td>
                                <a asp-controller="products" asp-action="Edit" asp-route-id="@element.idProduct" class="btn btn-light">Editar</a>
                                <a asp-controller="products" asp-action="Delete" asp-route-id="@element.idProduct" class="btn btn-danger">Eliminar</a>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        }
        else
        {
            <h2>No hay información aún</h2>
        }
    </div>
</div>

