@model  SistemaFacturacionMVC.Models.invoiceProduct

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Detalle Factura</h1>

<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idInvoice" value="@TempData["idInvoice"]" />
            <div class="form-group">
                <label asp-for="idProduct" class="control-label"></label>
                <select asp-for="idProduct" class="form-control" asp-items="ViewBag.idProduct"></select>
                <span asp-validation-for="idProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" min="1" />
                <span asp-validation-for="quantity" class="text-danger"></span>
                @if (ViewBag.Message != null)
                {
                    <span class="text-danger">@ViewBag.Message</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" asp-route-id="@TempData["idInvoice"]" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
